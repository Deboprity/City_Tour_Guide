<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/generic_background_color">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/home_page_title"

            style="@style/ActivityHeader"/>

        <ImageView
            android:id="@+id/home_page_image"
            app:layout_constraintTop_toBottomOf="@+id/home_page_title"
            style="@style/ActivityImage"
            android:contentDescription="@string/place_image" />

        <TextView
            android:id="@+id/home_page_description"
            app:layout_constraintTop_toBottomOf="@+id/home_page_image"
            style="@style/ActivityDesc"
            android:layout_below="@+id/home_page_image"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>